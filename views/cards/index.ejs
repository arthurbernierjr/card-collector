<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Collection</title>
  </head>
  <body>
    <%- include('../partials/_navbar') %>
    <div class="cards-index-body">
      <div class="cards-index-header">
        <h1>My Pok√©mon Card Collection</h1>
        <a class="add-card-link" href="/users/<%=user._id%>/cards/new">Add a card!</a>
      </div>
      <ul>
        <% cards.forEach((card) => { %>
        <a href="/users/<%=user._id %>/cards/<%= card._id %>">
          <li><%= card.name %> (<%= card.type %>)</li>
        </a>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
